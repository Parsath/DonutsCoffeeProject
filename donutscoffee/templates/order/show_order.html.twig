{% extends 'admin_pannel/admin_nav.html.twig' %}

{% block orderOn %}active{% endblock %}

{% block headerTitle %}Order <small>Check this order</small>{% endblock %}

{% block breadcrumbList %}
    <li><a href="{{ path('app_dashboard') }}" style="color: black;">Dashboard</a></li>
    <li class="active">&emsp;Order {{ order.id }}</li>
{% endblock %}

{% block content %}

    <section id="main">
        <div class="container">
            <div class="row">

                {% block sidebar %}
                    {{ parent() }}
                {% endblock %}

                <div class="col-md-8 ml-auto">

                    {# WEBSITE OVERVIEW #}

                    <div class="card">
                        <div class="card-header main-color-bg">
                            Orders
                        </div>
                        <div class="card-body">
                            <table class="table table-striped table-hover table-menu">
                                <tr>
                                    <th>Article Name</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                </tr>
                                {% for lineItem in order.lineItems %}
                                    <tr>
                                        <td>{{ lineItem.article.name }}</td>
                                        <td>{{ lineItem.quantity }}</td>
                                        <td>{{ lineItem.price }}</td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

    {% block modal %}
        {{ parent() }}
    {% endblock %}

    <footer id="footer" class="footer admin-footer main-color-bg">
        <p>Copyrights AdminStrap, &copy; 2020</p>
    </footer>


{% endblock %}