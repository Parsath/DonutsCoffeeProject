{% extends 'admin_pannel/admin_nav.html.twig' %}

{% block menuOn %}active{% endblock %}

{% block headerTitle %}Menu <small>Manage Your Menu Items</small>{% endblock %}

{% block breadcrumbList %}
    <li><a href="{{ path('app_dashboard') }}" style="color: black;">Dashboard</a></li>
    <li class="active">&emsp;Menu</li>
{% endblock %}


{% block content %}

    <section id="main">
        <div class="container">
            <div class="row">

                {% block sidebar %}
                    {{ parent() }}
                {% endblock %}

                <div class="col-md-8 ml-auto">

                    {# WEBSITE OVERVIEW #}

                    <div class="card">
                        <div class="card-header main-color-bg">
                            Menu
                        </div>
                        <div class="card-body">
                            <table class="table table-striped table-hover table-menu">
                                <tr>
                                    <th>Name</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Link</th>
                                    <th>Carousel</th>
                                    <th>Availability</th>
                                    <th>Removed from Menu</th>
                                    <th></th>
                                </tr>
                                {% for article in articles %}
                                    <tr>
                                        <td>{{ article.name }}</td>
                                        <td>{{ article.quantity }}</td>
                                        <td>{{ article.price }}dt</td>
                                        <td>{{ article.link }}</td>
                                        <td>
                                            {% if article.carousel == 1 %}
                                            <span style="color: lawngreen;" class="fa fa-check">
                                            {% elseif article.carousel == 0 %}
                                                <span style="color: orangered;" class="fa fa-close">
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if article.availability == 1 %}
                                            <span style="color: lawngreen;" class="fa fa-check">
                                            {% elseif article.availability == 0 %}
                                                <span style="color: orangered;" class="fa fa-close">
                                            {% endif %}
                                        </td>
                                        <th>
                                            {% if article.isDeleted == 1 %}
                                                <span style="color: lawngreen;" class="fa fa-check">
                                            {% elseif article.isDeleted == 0 %}
                                                <span style="color: orangered;" class="fa fa-close">
                                            {% endif %}
                                        </th>
                                        <td>
                                            <a id="edit-article" class="btn btn-secondary" href="{{ path('edit_article', {id: article.id}) }}">Edit</a>
                                            <a id="remove-article" class="btn btn-warning" href="{{ path('remove_article', {id: article.id}) }}">Remove</a>
                                            <a id="delete-article" class="btn btn-danger" href="{{ path('delete_article', {id: article.id}) }}">DELETE</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

    {% block modal %}
        {{ parent() }}
    {% endblock %}

    <footer id="footer" class="footer admin-footer main-color-bg">
        <p>Copyrights Parsath, &copy; 2020</p>
    </footer>





{% endblock %}