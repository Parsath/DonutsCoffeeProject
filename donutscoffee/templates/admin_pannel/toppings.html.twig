{% extends 'admin_pannel/admin_nav.html.twig' %}

{% block toppingsOn %}active{% endblock %}

{% block headerTitle %}Toppings{% endblock %}
{% block headerSubTitle %}Manage Your Menu Toppings{% endblock %}

{% block breadcrumbList %}
    <li><a href="{{ path('app_dashboard') }}" style="color: black;">Dashboard</a></li>
    <li class="active">&emsp;Menu</li>
{% endblock %}


{% block content %}

    <section id="main">
        <div class="container">
            <div class="row">

                {% block sidebar %}
                    {{ parent() }}
                {% endblock %}

                <div class="col-md-8 ml-auto">

                    {# WEBSITE OVERVIEW #}

                    <div class="card">
                        <div class="card-header main-color-bg">
                            Menu
                        </div>
                        <div class="card-body">
                            <table class="table table-striped table-hover table-menu">
                                <tr>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Availability</th>
                                    <th>Removed from Menu</th>
                                    <th></th>
                                </tr>
                                {% for topping in toppings %}
                                    <tr>
                                        <td>{{ topping.name }}</td>
                                        <td>{{ topping.price }}dt</td>
                                        <td>
                                            {% if topping.isAvailable == 1 %}
                                                <span style="color: lawngreen;" class="fa fa-check"></span>
                                            {% elseif topping.isAvailable == 0 %}
                                                <span style="color: orangered;" class="fa fa-close"></span>
                                            {% endif %}
                                        </td>
                                        <th>
                                            {% if topping.isDeleted == 1 %}
                                            <span style="color: lawngreen;" class="fa fa-check"></span>
                                            {% elseif topping.isDeleted == 0 %}
                                                <span style="color: orangered;" class="fa fa-close"></span>
                                            {% endif %}
                                        </th>
                                        <td class="dashboard-menu-btn-container">
                                            <a id="edit-topping" class="btn btn-info mb-1" href="{{ path('edit_topping', {id: topping.id}) }}">Edit</a>
                                            <a id="remove-topping" class="btn btn-warning mb-1" href="{{ path('remove_topping', {id: topping.id}) }}">Remove</a>
                                            <a id="delete-topping" class="btn btn-danger" href="{{ path('delete_topping', {id: topping.id}) }}">DELETE</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

    {% block modal %}
        {{ parent() }}
    {% endblock %}

    <footer id="footer" class="footer admin-footer main-color-bg">
        <p>Copyrights Parsath, &copy; 2020</p>
    </footer>





{% endblock %}