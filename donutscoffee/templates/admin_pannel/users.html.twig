{% extends 'admin_pannel/admin_nav.html.twig' %}

{% block usersOn %}active{% endblock %}

{% block headerTitle %}Users <small>Manage Your Admins</small>{% endblock %}

{% block breadcrumbList %}
    <li><a href="{{ path('app_dashboard') }}" style="color: black;">Dashboard</a></li>
    <li class="active">&emsp;Users</li>
{% endblock %}

{% block content %}

    <section id="main">
        <div class="container">
            <div class="row">

                {% block sidebar %}
                    {{ parent() }}
                {% endblock %}

                <div class="col-md-8 ml-auto">

                    {# WEBSITE OVERVIEW #}

                    <div class="card">
                        <div class="card-header main-color-bg">
                            Users
                        </div>
                        <div class="card-body">
                            <table class="table table-striped table-hover table-menu">
                                <tr>
                                    <th>Username</th>
                                    <th>First Name</th>
                                </tr>
                                {% for user in users %}
                                    <tr>
                                        <td>{{ user.username }}</td>
                                        <td>{{ user.firstName }}</td>
                                        <td><a class="btn btn-secondary" href="#">Edit</a><a class="btn btn-danger" href="#">Delete</a></td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

    {% block modal %}
        {{ parent() }}
    {% endblock %}

    <footer id="footer" class="footer admin-footer main-color-bg">
        <p>Copyrights Parsath, &copy; 2020</p>
    </footer>


{% endblock %}